# .env.example - plantilla de variables de entorno para desarrollo local

# Variables comunes
DB_USERNAME=postgres
DB_PASSWORD=root
DB_DRIVER=org.postgresql.Driver
DB_DIALECT=org.hibernate.dialect.PostgreSQLDialect

# JWT
JWT_SECRET=change_me_to_a_strong_secret
JWT_EXPIRATION=86400000

# Puertos y URLs (ajusta seg√∫n necesites)
AUTH_PORT=8081
OWNER_PORT=8082
PROFESSIONAL_PORT=8083
NOTIFICATION_PORT=3001
CONTENT_PORT=3002

# Bases de datos por servicio (ejemplo)
AUTH_DATABASE_URL=jdbc:postgresql://localhost:5432/pyg_auth
OWNER_DATABASE_URL=jdbc:postgresql://localhost:5432/pyg_owner
PROFESSIONAL_DATABASE_URL=jdbc:postgresql://localhost:5432/pyg_professional

# Logging
LOG_LEVEL=INFO
APP_LOG_LEVEL=DEBUG
SPRING_LOG_LEVEL=INFO

# Nota: Copia este archivo a ".env" y edita valores sensibles localmente.