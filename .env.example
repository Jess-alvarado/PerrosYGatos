# .env.example - Variables de entorno para PerrosYGatos

# Nombres de aplicaciones
SPRING_APPLICATION_NAME_AUTH=pyg-auth
SPRING_APPLICATION_NAME_OWNER=pyg-owner
SPRING_APPLICATION_NAME_PROFESSIONAL=pyg-professional

# Base de datos común
DB_USERNAME=postgres
DB_PASSWORD=root
DB_DRIVER=org.postgresql.Driver
DB_DIALECT=org.hibernate.dialect.PostgreSQLDialect

# URLs de bases de datos
AUTH_DATABASE_URL=jdbc:postgresql://localhost:5432/pyg_auth
OWNER_DATABASE_URL=jdbc:postgresql://localhost:5432/pyg_owner
PROFESSIONAL_DATABASE_URL=jdbc:postgresql://localhost:5432/pyg_professional

# Puertos de servicios
SERVER_PORT_AUTH=8081
SERVER_PORT_OWNER=8082
SERVER_PORT_PROFESSIONAL=8083

# URLs de servicios
AUTH_SERVICE_URL=http://localhost:8081

# JWT
JWT_SECRET=change_me_to_a_strong_secret
JWT_EXPIRATION=86400000

# Configuración JPA
SPRING_JPA_HIBERNATE_DDL_AUTO=update
SPRING_JPA_SHOW_SQL=true
SPRING_JPA_PROPERTIES_FORMAT_SQL=true
SPRING_JPA_OPEN_IN_VIEW=false

# Logging
LOG_LEVEL=INFO
APP_LOG_LEVEL=DEBUG
SPRING_LOG_LEVEL=INFO
HIBERNATE_SQL_LOG_LEVEL=DEBUG
HIBERNATE_BINDER_LOG_LEVEL=TRACE

# Configuración Feign Client
FEIGN_CONNECT_TIMEOUT=5000
FEIGN_READ_TIMEOUT=5000
